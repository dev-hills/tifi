---
import {Image} from "astro:assets";
import Logo from "../../public/assets/logo.svg"
import ArrowDown from "../../public/assets/arrow-down.svg"
---



<header class="font-noto-sans mb-[10px] lg:px-[160px] px-0 lg:pt-8 pt-0 text-[#1D2939]">
    <div class="flex justify-between lg:p-6 md:px-10 px-4 md:py-7 py-4 bg-white shadow lg:rounded-3xl rounded-none border-[#EAECF0]">
        <a href="/">
        <Image 
        src={Logo}
        width={44}
        height={20}
        alt="Logo"
        />
        </a>
        <span class="cursor-pointer lg:hidden text-3xl">
            <ion-icon name="menu" id="menu"></ion-icon>
            <ion-icon name="close-outline" id="close" class="hidden"></ion-icon>
        </span>
        <div id="newlist" class="lg:flex lg:flex-row lg:items-start lg:justify-between lg:mt-0 mt-9 z-4 lg:z-auto lg:static absolute 
        bg-white w-full left-0 lg:w-auto py-6 lg:py-0 pl-4 lg:pl-0 flex flex-col items-center
        lg:opacity-100 opacity-0 text-center lg:text-normal top-[-400px] transition-all ease-in duration-500">
        <ul class="lg:flex pt-4">
            <li class="cursor-pointer"><a href="/">About Us</a></li></li>
            <li class="lg:px-5 cursor-pointer py-4 lg:py-0"><a href="/Portfolio">Portfolio</a></li></li>
            <li class="flex lg:pr-3 pl-3 lg:pl-0 cursor-pointer relative" id="clientClick">
                Clients
            <Image 
            src={ArrowDown}
            width={20}
            height={20}
            alt={`Arrow-down`}
            class="pb-1 pl-1"
            />
            <div id="dropdownDisplay" class="rounded hidden border-gray-500 bg-white p-8 absolute top-[40px] shadow-md w-[200px]">
                <p>
                <a href="/clients/business">
                    Individual </a>
                </p>
                <p>
                    <a href="/clients/individuals">Businesses</a></p>
            </div>
            </li>
            <li class="cursor-pointer py-4 lg:py-0"><a href="/resources">Resources</a></li></li>
        </ul>

            <a href="/contact"><button class="bg-[#FF601F] hidden lg:ml-[100px] text-white py-3 px-5 rounded-lg hover:transform hover:scale-105 hover:duration-700 lg:flex font-bold mr-2">
                LET'S TALK
            </button></a>
</div>
           
        
    </div>
</header>

 <script>
    var menu: any = document.querySelector("#menu");
    var close: any = document.querySelector("#close");
    let list: any = document.querySelector("#newlist");
    const clientClick = document.querySelector("#clientClick");
    const dropdownDisplay = document.querySelector("#dropdownDisplay");

    menu.addEventListener("click", function() {
        close.style.display = "block";
        menu.style.display = "none";
        list.style.top = '30px'
        list.style.opacity = '100'
    });

    close.addEventListener("click", function() {
        menu.style.display = "block";
        close.style.display = "none";
        list.style.top = "0"
        list.style.opacity = '0'
        // dropdownDisplay?.classList.add("hidden");
    });

    clientClick?.addEventListener("click", function() {
        dropdownDisplay?.classList.toggle("hidden");
    });
</script>
